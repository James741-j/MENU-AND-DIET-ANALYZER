/* ===================================
   MESS MENU ANALYZER - PREMIUM STYLES
   =================================== */

/* ===== CSS RESET & BASE ===== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Color Palette - HSL for easy manipulation */
    --primary-hue: 280;
    --secondary-hue: 170;
    --accent-hue: 45;

    --primary: hsl(var(--primary-hue), 70%, 60%);
    --primary-light: hsl(var(--primary-hue), 70%, 70%);
    --primary-dark: hsl(var(--primary-hue), 70%, 50%);

    --secondary: hsl(var(--secondary-hue), 60%, 55%);
    --secondary-light: hsl(var(--secondary-hue), 60%, 65%);

    --accent: hsl(var(--accent-hue), 90%, 65%);

    /* Neutral Colors */
    --bg-primary: #0a0e27;
    --bg-secondary: #151a33;
    --bg-tertiary: #1f2740;
    --bg-card: rgba(255, 255, 255, 0.05);

    --text-primary: #ffffff;
    --text-secondary: #b8c1ec;
    --text-muted: #7b8bb3;

    /* Glassmorphism */
    --glass-bg: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
    --glass-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);

    /* Gradients */
    --gradient-primary: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    --gradient-accent: linear-gradient(135deg, var(--accent) 0%, hsl(var(--accent-hue), 90%, 75%) 100%);
    --gradient-card: linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.03) 100%);

    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;

    /* Border Radius */
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 24px;

    /* Transitions */
    --transition-fast: 0.2s ease;
    --transition-normal: 0.3s ease;
    --transition-slow: 0.5s ease;

    /* Shadows */
    --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.2);
    --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.3);
    --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.4);
    --shadow-glow: 0 0 20px rgba(168, 85, 247, 0.4);
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: var(--bg-primary);
    color: var(--text-primary);
    line-height: 1.6;
    overflow-x: hidden;
    min-height: 100vh;
    background-image:
        radial-gradient(circle at 20% 50%, rgba(168, 85, 247, 0.15) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(78, 205, 196, 0.15) 0%, transparent 50%);
    background-attachment: fixed;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}

::-webkit-scrollbar-track {
    background: var(--bg-secondary);
}

::-webkit-scrollbar-thumb {
    background: var(--gradient-primary);
    border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--primary-light);
}

/* ===== LAYOUT ===== */
.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
}

/* ===== HEADER ===== */
.header {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--glass-border);
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: var(--shadow-md);
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md) 0;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
}

.logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 1.5rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.logo i {
    font-size: 2rem;
    background: var(--gradient-primary);
    padding: 0.5rem;
    border-radius: var(--radius-md);
    color: white;
    -webkit-text-fill-color: white;
}

.logo h1 {
    font-size: 1.5rem;
    font-weight: 700;
}

.nav {
    display: flex;
    gap: var(--spacing-sm);
}

.nav-btn {
    background: transparent;
    border: 1px solid var(--glass-border);
    color: var(--text-secondary);
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-md);
    cursor: pointer;
    font-size: 0.95rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
}

.nav-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: var(--gradient-primary);
    transition: left var(--transition-normal);
    z-index: -1;
}

.nav-btn:hover::before,
.nav-btn.active::before {
    left: 0;
}

.nav-btn:hover,
.nav-btn.active {
    color: var(--text-primary);
    border-color: var(--primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
}

/* ===== MAIN CONTENT ===== */
.main {
    padding: var(--spacing-xl) 0;
    min-height: calc(100vh - 100px);
}

.tab-content {
    display: none;
    animation: fadeIn 0.3s ease;
}

.tab-content.active {
    display: block;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ===== UPLOAD SECTION ===== */
.upload-card {
    background: var(--gradient-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    padding: var(--spacing-xl);
    box-shadow: var(--glass-shadow);
}

.upload-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
}

.upload-header h2 {
    font-size: 2rem;
    margin-bottom: var(--spacing-sm);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.upload-header p {
    color: var(--text-secondary);
    font-size: 1.1rem;
}

.upload-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
}

.upload-box {
    background: var(--bg-card);
    border: 2px dashed var(--glass-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    text-align: center;
    cursor: pointer;
    transition: all var(--transition-normal);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
    min-height: 250px;
    justify-content: center;
}

.upload-box:hover {
    border-color: var(--primary);
    background: var(--gradient-card);
    transform: translateY(-5px);
    box-shadow: var(--shadow-glow);
}

.upload-box i {
    font-size: 3rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: var(--spacing-sm);
}

.upload-box h3 {
    font-size: 1.3rem;
    margin-bottom: var(--spacing-xs);
}

.upload-box p {
    color: var(--text-secondary);
}

.text-input-box {
    background: var(--bg-card);
    border: 2px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    min-height: 250px;
}

.text-input-box i {
    font-size: 3rem;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.text-input-box h3 {
    font-size: 1.3rem;
}

.text-input-box textarea {
    background: var(--bg-secondary);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
    color: var(--text-primary);
    font-family: inherit;
    font-size: 0.95rem;
    resize: vertical;
    min-height: 150px;
    transition: all var(--transition-normal);
}

.text-input-box textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(168, 85, 247, 0.2);
}

/* Preview Section */
.preview-section {
    margin-top: var(--spacing-lg);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--glass-border);
}

.image-preview {
    text-align: center;
    margin-bottom: var(--spacing-lg);
}

.image-preview img {
    max-width: 100%;
    max-height: 400px;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
}

.ocr-progress {
    text-align: center;
    padding: var(--spacing-xl);
}

.ocr-progress p {
    color: var(--text-secondary);
    margin: var(--spacing-md) 0;
}

.progress-bar {
    width: 100%;
    max-width: 400px;
    height: 6px;
    background: var(--bg-secondary);
    border-radius: 3px;
    margin: var(--spacing-md) auto 0;
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    background: var(--gradient-primary);
    width: 0%;
    transition: width var(--transition-normal);
}

.ocr-result {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
}

.ocr-result h3 {
    margin-bottom: var(--spacing-md);
    color: var(--primary-light);
}

.extracted-items {
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    max-height: 300px;
    overflow-y: auto;
}

.extracted-items p {
    padding: var(--spacing-xs);
    margin: var(--spacing-xs) 0;
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
    border-left: 3px solid var(--primary);
}

/* ===== BUTTONS ===== */
.btn {
    padding: var(--spacing-sm) var(--spacing-lg);
    border: none;
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-normal);
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn:active::before {
    width: 300px;
    height: 300px;
}

.btn-primary {
    background: var(--gradient-primary);
    color: white;
    box-shadow: var(--shadow-md);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
}

.btn-secondary {
    background: var(--bg-card);
    color: var(--text-primary);
    border: 1px solid var(--glass-border);
}

.btn-secondary:hover {
    background: var(--bg-tertiary);
    border-color: var(--primary);
}

/* ===== NUTRITION CARDS ===== */
.analysis-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-lg);
    flex-wrap: wrap;
    gap: var(--spacing-md);
}

.analysis-header h2 {
    font-size: 2rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.nutrition-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
}

.nutrition-card {
    background: var(--gradient-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
}

.nutrition-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--gradient-primary);
    transition: width var(--transition-normal);
}

.nutrition-card:hover::before {
    width: 100%;
    opacity: 0.1;
}

.nutrition-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
}

.card-icon {
    font-size: 2.5rem;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
    background: var(--bg-card);
}

.nutrition-card.calories .card-icon {
    background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
}

.nutrition-card.protein .card-icon {
    background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
}

.nutrition-card.carbs .card-icon {
    background: linear-gradient(135deg, #FFE66D 0%, #FDBB2D 100%);
}

.nutrition-card.fat .card-icon {
    background: linear-gradient(135deg, #A8DADC 0%, #457B9D 100%);
}

.card-content h3 {
    font-size: 0.9rem;
    color: var(--text-secondary);
    font-weight: 500;
    margin-bottom: var(--spacing-xs);
}

.card-content .value {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xs);
}

.card-content .goal {
    font-size: 0.85rem;
    color: var(--text-muted);
}

/* ===== FOOD ITEMS LIST ===== */
.food-details-section {
    background: var(--gradient-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    padding: var(--spacing-xl);
    margin-bottom: var(--spacing-lg);
}

.food-details-section h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-md);
    color: var(--primary-light);
}

.food-items-list {
    display: grid;
    gap: var(--spacing-md);
}

.food-item {
    background: var(--bg-card);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr 1fr;
    gap: var(--spacing-md);
    align-items: center;
    transition: all var(--transition-normal);
}

.food-item:hover {
    background: var(--bg-tertiary);
    transform: translateX(5px);
}

.food-name {
    font-weight: 600;
    font-size: 1.05rem;
}

.food-nutrient {
    text-align: center;
}

.food-nutrient .label {
    font-size: 0.75rem;
    color: var(--text-muted);
    text-transform: uppercase;
}

.food-nutrient .value {
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--text-primary);
}

.empty-state {
    text-align: center;
    padding: var(--spacing-xl);
    color: var(--text-muted);
}

.empty-state i {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
    opacity: 0.5;
}

/* ===== INSIGHTS SECTION ===== */
.insights-section {
    background: var(--gradient-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    padding: var(--spacing-xl);
}

.insights-section h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-md);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: var(--accent);
}

.insights-content {
    line-height: 1.8;
    color: var(--text-secondary);
}

.insight-item {
    background: var(--bg-card);
    border-left: 3px solid var(--primary);
    border-radius: var(--radius-sm);
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-md);
}

.insight-item h4 {
    color: var(--primary-light);
    margin-bottom: var(--spacing-xs);
}

.loading-insights {
    text-align: center;
    padding: var(--spacing-lg);
}

/* ===== CHAT SECTION ===== */
.chat-section {
    background: var(--gradient-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    padding: var(--spacing-xl);
    height: calc(100vh - 250px);
    display: flex;
    flex-direction: column;
}

.chat-header {
    margin-bottom: var(--spacing-lg);
    text-align: center;
}

.chat-header h2 {
    font-size: 1.8rem;
    margin-bottom: var(--spacing-xs);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.chat-header p {
    color: var(--text-secondary);
}

.chat-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    overflow: hidden;
}

.chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: var(--spacing-md);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    background: var(--bg-card);
    border-radius: var(--radius-lg);
}

.chat-message {
    display: flex;
    gap: var(--spacing-sm);
    animation: slideIn 0.3s ease;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.chat-message.user {
    flex-direction: row-reverse;
}

.message-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.chat-message.bot .message-avatar {
    background: var(--gradient-primary);
}

.summary-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
}

.summary-item .value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
}

/* ===== SPINNER ===== */
.spinner {
    width: 50px;
    height: 50px;
    border: 4px solid var(--bg-tertiary);
    border-top: 4px solid var(--primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

/* ===== LOADING OVERLAY ===== */
.loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(10, 14, 39, 0.95);
    backdrop-filter: blur(10px);
    display: none;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: var(--spacing-md);
    z-index: 2000;
}

.loading-overlay.active {
    display: flex;
}

.loading-spinner {
    width: 80px;
    height: 80px;
    border: 6px solid var(--bg-tertiary);
    border-top: 6px solid var(--primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

.loading-overlay p {
    font-size: 1.2rem;
    color: var(--text-secondary);
}

/* ===== RESPONSIVE DESIGN ===== */
@media (max-width: 768px) {
    .header-content {
        flex-direction: column;
        gap: var(--spacing-md);
    }

    .nav {
        width: 100%;
        justify-content: space-around;
    }

    .nav-btn span {
        display: none;
    }

    .upload-methods {
        grid-template-columns: 1fr;
    }

    .nutrition-cards {
        grid-template-columns: 1fr;
    }

    .food-item {
        grid-template-columns: 1fr;
        gap: var(--spacing-xs);
    }

    .food-nutrient {
        text-align: left;
        display: flex;
        justify-content: space-between;
    }

    .charts-grid {
        grid-template-columns: 1fr;
    }

    .message-content {
        max-width: 85%;
    }
}

@media (max-width: 480px) {
    :root {
        --spacing-xl: 2rem;
        --spacing-lg: 1.5rem;
    }

    .logo h1 {
        font-size: 1.2rem;
    }

    .upload-header h2,
    .analysis-header h2,
    .trends-header h2 {
        font-size: 1.5rem;
    }
}